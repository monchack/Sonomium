<Page x:Class="Sonomium.PageCurrent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sonomium"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCurrent">

    <Grid>
        <Image x:Name="albumImage" HorizontalAlignment="Left" Height="171" Margin="0,10,0,0" VerticalAlignment="Top" Width="140pt"/>
        <ListView x:Name="trackList" HorizontalAlignment="Left" Height="388" Margin="187,10,0,0" VerticalAlignment="Top" Width="603"  SelectedValuePath="TrackFile" FontFamily="Segoe UI" FontSize="14pt"   Loaded="Page_Loaded" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=TrackStatus}" Width="20pt" FontFamily="Segoe MDL2 Assets" FontSize="8pt" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Path=TrackTitle}" Width="120pt" />
                            <TextBlock Text="{Binding Path=TrackDuration}" HorizontalAlignment="Right" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>

    </Grid>
</Page>
